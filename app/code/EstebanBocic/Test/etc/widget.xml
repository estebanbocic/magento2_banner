<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Magento/Widget/etc/widget.xsd">
        <widget id="emizentech_bannerslider" class="EstebanBocic\Test\Block\Widget\BannerSlider">
                <label translate="true">Banners</label>
                <description>Insert Banner by Group</description>
                <parameters>
                	<parameter name="group" xsi:type="select" required="true" visible="true"
                		source_model="EstebanBocic\Test\Model\Config\BannerGroups">
						<label translate="true">Group</label>
						<description translate="true">All banner images will be used from Group.</description>
					</parameter>
                    <parameter name="sliderwidth" xsi:type="text"  visible="true" sort_order="2" value="250">
						<label translate="true">Slider Width</label>
						<description translate="true"><strong>Custom width for widget banner</strong>only numbers</description>
                    </parameter>
                </parameters>
        </widget>
</widgets>